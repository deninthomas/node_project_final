    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100;0,9..40,200;0,9..40,300;0,9..40,400;0,9..40,500;0,9..40,600;0,9..40,700;0,9..40,800;1,9..40,200&family=Montserrat:wght@400;500;600;700&family=Open+Sans:wght@300;400;500;600;700&family=Poppins:wght@200;300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/css/signup.css">
    <title>Signup</title>
</head>

<body>
    <div class="container-fluid">
        <div class="container signupbg">
            <div class="logindesign">
                <div class="backgroundImg signupImg">
                    <img src="/img/signupbackground.jpeg" alt="loginpage">
                </div>
                <div class="loginBox signupform " id="loginBox">
                    <!-- <div class="hiding"> -->
                   
                    <form class="otpverify loginInputFields">
                        <div id="emailVerification">
                            <div class="emailTitle">
                                <i class="material-symbols-outlined mailLogo">
                                    mail
                                </i>
                                <header class="fw-bold">VERIFY YOUR EMAIL ADDRESS</header>
                            </div>
                            <hr>
                            <div class="emailTitle">
                                <p>A verification code has been sent to</p>
                                <p class="fw-bold" id="emailmsg"></p>
                            </div>
                            <p class="emailDef">Please check your inbox and enter the verification code below to verify
                                your
                                email address.The code will expire in <span id="timer"></span></p>
                            <div class="otpButton">
                                <div class="otpinput">
                                    <input type="text" class="form-control" id="signupOtp" placeholder="enter otp"
                                        maxlength="4">
                                </div>
                                <div class="otpinput">
                                    <button class="otpBtn btn" id="otpBtn">Confirm</button>
                                </div>
                                <div class="otpinput resendOtp">
                                    <a onclick="resendOtp()">Resend OTP</a>
                                    <a href="/signup" class="text-primary">change email</a>
                                </div>
                            </div>
                        
                        </div>
                        <div class="hide" id="alertbox">
                        </div>
                       
                    </form>
                </div>
            </div>
        </div>
        <!-- <script src="/js/signup.js"></script> -->
        <script src="/js/countdown.js"></script>
        <script src="/js/signupOtp.js"></script>
</body>

</html>